@model GCRBA.Models.User
@{
    ViewBag.Title = "New User Form";
}
<!---->
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(FormMethod.Post))
{

    //if the action type is the missing fields then execute the warning
    if (Model.ActionType == GCRBA.Models.User.ActionTypes.Unknown)
    {
        <div id="content-locked">
            <i class="fad fa-exclamation-trangle fa-2x"></i>
            <span>Please ensure your passwords match.</span>
        </div>
    }


    if (Model.ActionType == GCRBA.Models.User.ActionTypes.RequiredFieldMissing)
    {
        <div id="content-locked">
            <i class="fad fa-exclamation-trangle fa-2x"></i>
            <span>Please enter data in all fields.</span>
        </div>
    }


    <div class="section">
        <div>
            <!-- User First Name -->
            <div>
                <div>@Html.Label("First Name")</div>
                <div>@Html.TextBoxFor(model => model.FirstName, new {
                    @name = "FirstName",
                    @autofocus = "autofocus" })</div>
            </div>

            <!-- User Last Name -->
            <div>
                <div>@Html.Label("Last Name")</div>
                <div>@Html.TextBoxFor(model => model.LastName, new { 
                    @Name = "LastName" })</div>
            </div>
        </div>

        <!-- Email -->
        <div>
            <div>@Html.Label("E-mail")</div>
            <div>@Html.TextBoxFor(model => model.Email, new {
                @Name = "Email" })</div>
        </div>

        <!-- Username -->
        <div>
            <div>@Html.Label("Username")</div>
            <div>@Html.TextBoxFor(model => model.Username, new { 
                @Name = "Username" })</div>
        </div>
    </div>

    <!-- Password -->
    <div class="section">
        <div>@Html.Label("Password")</div>
        <div>@Html.TextBoxFor(model => model.Password, new { 
            type = "password",
            @Name = "Password" })</div>
    </div>

    <div>
        <button id="btnNewUser"
                name="btnSubmit" 
                value="newuser" 
                class="button-action">
                <i class="fas fa-user-plus">
                </i> Submit! </button>
    </div>
}

<script>
    $(document).ready(function () {
        SetActiveMenus('signup');
    });

</script>

