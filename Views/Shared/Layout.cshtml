@using System.Web.Optimization;
@{ 
    // get current user session and see if they are logged in 
    GCRBA.Models.User currentUser = new GCRBA.Models.User();
    currentUser = currentUser.GetUserSession();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    <script src="https://kit.fontawesome.com/a75ff89abd.js" crossorigin="anonymous"></script>
    <!-- this is the style sheet to be used -->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.css")
</head>
<body>
    <div class="container text-center">
        <!--sign out button-->
        @if (currentUser.IsAuthenticated)
            {
                 <a href="/Profile/Logout">Log Out</a>
            }
        <!-- all code in every cshtml page is run through this div -->
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
