@using GCRBA.ViewModels
@model ProfileViewModel

@{
	ViewBag.Title = "Edit Company Information";
}

<h2>@ViewBag.Title</h2>

@if (Model.User.isMember != 1)
{
	@Html.Partial("MemberOnly");
} else
{
	using (Html.BeginForm(null, null, null, FormMethod.Post, new { @class = "mx-auto w-50" }))
	{
		if (Model.Company.CompanyID > 0)
		{
			<p>Member account connected with: @Model.Company.Name</p>
			<button name="btnSubmit" value="removeCompany">Remove Company from Profile</button>
			<button name="btnSubmit" value="addCompany">Add Existing Company to Profile</button>
			<button name="btnSubmit" value="editCompany">Edit General Company Information</button>
			<button name="btnSubmit" value="editSpecials">Edit Specials</button>
			<button name="btnSubmit" value="editCategories">Edit Categories</button>
			<button name="btnSubmit" value="addLocation">Add New Location/Add New Company</button>
		} else
		{
			<p>You are not currently associated with any companies.</p>
			<button name="btnSubmit" value="addCompany">Add Company to Profile</button>
		}
	}
}