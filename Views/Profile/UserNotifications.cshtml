@model GCRBA.Models.User

@{
	ViewBag.Title = "Notifications";
}

@if (!Model.IsAuthenticated)
{
	@Html.Partial("PleaseLogin");
} else
{
	using (Html.BeginForm(FormMethod.Post))
	{
		foreach (var message in Model.Notifications)
		{
			<div>
				<input type="checkbox" name="notification" value="@message.NotificationID" />
				<label for="notification" class="form-label">@message.Message</label>
			</div>
		}
		
		<button name="btnSubmit" value="delete">Delete Selected</button>
		<button name="btnSubmit" value="markAsRead">Mark as Read</button>

	}
}